@model IEnumerable<EasyFlights.Models.UsersBonusPointsDict>

@{
    ViewData["Title"] = "UsersBonusPoints";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UsersBonusPoints</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BonusPoints.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BonusPoints.DateAquired)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BonusPoints.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BonusPoints.DateAquired)
                </td>
            </tr>
        }
    </tbody>
</table>
