@model IEnumerable<EasyFlights.Web.ViewModels.UserVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPoints)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPoints)
            </td>
            <td>
                @if (item.Role != "Admin")
                {
                    <form asp-controller="User" asp-action="MakeAdmin">
                        <input value="@item.Email" name="email" hidden />
                        <input value="@item.Role" name="role" hidden />
                        <input value="@item.TotalPoints" name="points" hidden />
                        <button type="submit" class="order">Make Admin</button>
                    </form>
                }
                else
                {
                    <form asp-controller="User" asp-action="MakeUser">
                        <input value="@item.Email" name="email" hidden />
                        <input value="@item.Role" name="role" hidden />
                        <input value="@item.TotalPoints" name="points" hidden />
                        <button type="submit" class="order">Make User</button>
                    </form>
                }
                <form asp-controller="User" asp-action="RemoveUser">
                    <input value="@item.Email" name="email" hidden />
                    <input value="@item.Role" name="role" hidden />
                    <input value="@item.TotalPoints" name="points" hidden />
                    <button type="submit" class="order">Delete</button>
                </form>

            </td>
        </tr>
        }
    </tbody>
</table>
